{
  "name": "sonner-ssr",
  "version": "1.0.2",
  "description": "An opinionated toast component for Next based on sonner.",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "release": "npm run build && npm publish",
    "build": "tsup src/index.tsx && node copyStyles.mjs"
  },
  "keywords": [
    "react",
    "notifications",
    "toast",
    "snackbar",
    "message",
    "ssr",
    "next",
    "server components"
  ],
  "homepage": "https://github.com/tonysantana1492/sonner-ssr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonysantana1492/sonner-ssr.git"
  },
  "bugs": {
    "url": "https://github.com/tonysantana1492/sonner-ssr/issues"
  },
  "author": "Tony Santana Lopez <tonysantana1492@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.26",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^18.0.0 || ^19.0.0 || ^19.0.0-rc"
  }
}
