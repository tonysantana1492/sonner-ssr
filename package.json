{
  "name": "sonner-ssr",
  "version": "1.0.0",
  "description": "An opinionated toast component for Next based on sonner.",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "release": "npm run build && npm publish",
    "build": "tsup src/index.ts"
  },
  "keywords": [
    "react",
    "notifications",
    "toast",
    "snackbar",
    "message",
    "ssr",
    "next",
    "server components"
  ],
  "homepage": "https://github.com/tonysantana1492/sonner-ssr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonysantana1492/sonner-ssr.git"
  },
  "bugs": {
    "url": "https://github.com/tonysantana1492/sonner-ssr/issues"
  },
  "author": "Tony Santana Lopez <tonysantana1492@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "isomorphic-dompurify": "^2.21.0",
    "lint-staged": "^15.2.0",
    "nanoid": "^5.0.9",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.7.4",
    "standard-version": "^9.5.0",
    "tsup": "^6.4.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0 || ^19.0.0-rc",
    "react-dom": "^18.0.0 || ^19.0.0 || ^19.0.0-rc"
  }
}
